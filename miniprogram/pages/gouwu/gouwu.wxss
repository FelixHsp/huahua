page{
  background-color: #eee
}
#top-words{
  font-size: 14px;
  /* background-color: white; */
  text-align: center;
  color: #99CC99;
  margin-top: 20px;
}
.goods{
  margin: 0 auto;
  width: 90%;
  height: 80px;
  background: white;
  margin-top: 20px;
  border-radius: 10px;
  position: relative;
}
.goods image{
  width: 60px;
  height: 60px;
  position: absolute;
  left: 20px;
  top: 50%;
  transform: translate(0,-50%);
}
#goodsname{
  text-align: center;
  position: relative;
  top: 15px;
  font-size: 14px;
}
#goodsprice{
  text-align: center;
  position: relative;
  top: 30px;
  font-size: 14px;
}
#goodsnumber{
  text-align: center;
  position: absolute;
  /* top: 16px; */
  font-size: 12px;
  right: 5%;
  bottom: 0;
  /* transform: translate(-100%,0); */
}