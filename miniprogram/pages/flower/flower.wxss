/* pages/flower/flower.wxss */

page {
  font-family:PingFangSC-Regular;
  background-color: rgb(237, 237, 237);
}

#father {
  position: absolute;
  top: 50%;
  bottom: 0;
  transform: translate(0,-50%);
  left: 0;
  right: 0;
  /* background-color:white; */
  width: 90%;
  margin: 0 auto;
}

#showTime {
  display: block;
  /* font-family: PingFangSC-Regular; */
  font-size: 50px;
  font-weight: lighter;
  /* color: #999; */
  font-family:Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
  text-align: center;
}

#mask {
  width: 100%;
  height: 100%;
  position: relative;
  top: -70%;
  left: 0;
  /* margin-top: 30%; */
}

#content {
  width: 100%;
  height: 50%;
  text-align: center;
  position: absolute;
  top: 70%;
  left: 50%;
  /* background: red; */
  transform: translate(-50%, -50%);
}

#img {
  position: relative;
}

#img image {
  height: 130px;
  width: 30%;
  position: relative;
  top: 30px;
  margin-bottom: 25px;
  /* background-color: rgb(177, 172, 172);
  opacity: 0.3 */
}
#img image:nth-child(1),#img image:nth-child(4){
  margin-right: 10px;
}
#img image:nth-child(3),#img image:nth-child(6){
  margin-left: 10px;
}
#main .flowers {
  width: 120px;
  height: 120px;
  position: relative;
  left: 50%;
  transform: translateX(-50%)
}
#main .flowers2 {
  width: 140px;
  height: 160px;
  position: relative;
  left: 50%;
  transform: translateX(-50%)
}

#headWord .word{
  display: block;
  text-align: center;
  font-size: 25px;
}

#time .shengyushijian{
  display: block;
  text-align: center;
  font-size: 25px;
}

#img .chose{
  /* border: 1px solid #99CC99; */
  background: #99CC99;
  border-radius: 10px;
  z-index: 100;
  height: 130px;
  width: 30%;
}
#content1{
  width: 100%;
  background-color: #ccc;
  /* color: #; */
  position: absolute;
  top: 105%;
  height: 60%;
  border-radius: 10px;
  /* bottom: 200% */
}
#content1 text{
  position: absolute;
  left: 5%;
  top: 5%;
  /* font-weight:  */
  font-size: 14px;
}
#content1 text:nth-child(2){
  position: absolute;
  color: #999;
  font-weight: lighter;
  left: 5%;
  top: 20%;
  font-size: 12px;
}
#content1 text:nth-child(3){
  position: absolute;
  color: #999;
  font-weight: lighter;
  left: 5%;
  top: 42%;
  font-size: 12px;
}
#content1 text:nth-child(4){
  position: absolute;
  color: #999;
  font-weight: lighter;
  left: 5%;
  top: 65%;
  font-size: 12px;
}
#father button{
  margin-top: 20px;
  width: 100px;
