page {
  font-family:PingFangSC-Regular;
  background-color: #eee;
}

#father {
  position: absolute;
  top: 50%;
  bottom: 0;
  transform: translate(0,-50%);
  left: 0;
  right: 0;
  /* background-color:white; */
  width: 90%;
  margin: 0 auto;
}

#showTime {
  display: block;
  /* font-family: PingFangSC-Regular; */
  font-size: 50px;
  font-weight: lighter;
  /* color: #999; */
  font-family:Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
  text-align: center;
}

#mask {
  width: 100%;
  height: 100%;
  position: relative;
  top: -70%;
  left: 0;
  /* margin-top: 30%; */
}

#content {
  width: 80%;
  height: 50%;
  text-align: center;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

#img {
  position: relative;
}

#img image {
  height: 200px;
  width: 30%;
  position: relative;
  top: 10px;
  margin-bottom: 25px;
  /* background-color: rgb(177, 172, 172);
